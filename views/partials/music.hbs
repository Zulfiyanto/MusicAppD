<script>
  let music = document.querySelector('audio');
  let play = document.getElementById('play');

  let isPlaying = false

  function playsong(){
    isPlaying = true
    music.play()
  }

  function pausesong(){
    isPlaying = false
    music.pause()
  }

  play.addEventListener('click',()=> (isPlaying?pausesong():playsong()))
</script>